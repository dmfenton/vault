{
  "name": "vault-server-ts",
  "version": "2.0.0",
  "description": "Secure vault server with phone approval (TypeScript)",
  "main": "dist/server.js",
  "bin": {
    "vault-cli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest --coverage --watchAll",
    "test:once": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "cli": "tsx src/cli.ts"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "ws": "^8.14.2",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.10",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/server.ts",
      "!src/cli.ts",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testTimeout": 10000,
    "forceExit": true
  }
}